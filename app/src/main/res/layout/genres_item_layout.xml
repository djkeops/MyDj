<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/s_padding"
    android:background="@color/buttonColor"
    android:orientation="vertical"
    android:padding="@dimen/m_padding">

    <ImageView
        android:id="@+id/genre_logo"
        android:layout_width="@dimen/genre_logo_dimen"
        android:layout_height="@dimen/genre_logo_dimen"
        android:layout_gravity="center"
        android:contentDescription="@string/genre_logo"
        android:scaleType="fitCenter"
        tools:src="@drawable/electronic" />

    <TextView
        android:id="@+id/genre_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/s_padding"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="@dimen/m_text_size"
        android:textStyle="bold"
        tools:text="@string/electronic_genre" />

</LinearLayout>