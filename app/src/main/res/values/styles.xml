<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- IntroActivity theme. -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="PlayerSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_height</item>
        <item name="android:layout_marginTop">@dimen/separator_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/separator_margin_bot</item>
        <item name="android:background">@color/separatorColor</item>
    </style>

    <style name="PlayerButton">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">@dimen/player_button_dimen</item>
        <item name="android:layout_height">@dimen/player_button_dimen</item>
    </style>

    <style name="PlaylistMelodyLogo">
        <item name="android:layout_width">@dimen/melody_logo_dimen_playlist</item>
        <item name="android:layout_height">@dimen/melody_logo_dimen_playlist</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PlayerMelodyLogo">
        <item name="android:layout_width">@dimen/melody_logo_dimen_player</item>
        <item name="android:layout_height">@dimen/melody_logo_dimen_player</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/melody_logo_margin_top</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MelodyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaylistMelodyTitle" parent="@style/MelodyText">
        <item name="android:paddingEnd">@dimen/s_padding</item>
        <item name="android:paddingStart">@dimen/s_padding</item>
        <item name="android:textSize">@dimen/l_text_size</item>
    </style>

    <style name="PlaylistMelodySinger" parent="@style/MelodyText">
        <item name="android:paddingEnd">@dimen/s_padding</item>
        <item name="android:paddingStart">@dimen/s_padding</item>
        <item name="android:paddingTop">@dimen/xs_padding</item>
        <item name="android:textSize">@dimen/s_text_size</item>
    </style>

    <style name="PlayerMelodyTitle" parent="@style/MelodyText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/l_text_size</item>
    </style>

    <style name="PlayerMelodySinger" parent="@style/MelodyText">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/m_padding</item>
        <item name="android:textSize">@dimen/m_text_size</item>
    </style>

</resources>
